{
  "openapi": "3.0.0",
  "info": {
    "title": "SOLID Challenge Documentation",
    "description": "This is an API about users management",
    "version": "1.0.0",
    "contact": {
      "email": "dinobergueviana@gmail.com"
    }
  },
  "paths": {
    "/users": {
      "post": {
        "tags": ["Users"],
        "summary": "create",
        "description": "Creates a new user",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": "string"
                },
                "example": {
                  "name": "Jo√£o Doe",
                  "email": "joaodoe@mail.com"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                    "properties": {
                      "id": {
                        "type": "string"
                      },
                      "name": {
                        "type": "string"
                      },
                      "email": {
                        "type": "string"
                      },
                      "admin": {
                        "type": "boolean",
                        "default": false
                      },
                      "created_at": {
                        "type": "string",
                        "format": "date"
                      },
                      "updated_at": {
                        "type": "string",
                        "format": "date"
                      }
                    }
                }
              }
            }
          },
          "400": {
            "description": "User already exists."
          }
        }
      },
      "get": {
        "tags": ["Users"],
        "summary": "list all",
        "description": "List all users",
        "parameters": [
          {
            "name": "user_id",
            "in": "header",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string"
                      },
                      "name": {
                        "type": "string"
                      },
                      "email": {
                        "type": "string"
                      },
                      "admin": {
                        "type": "boolean",
                        "format": false
                      },
                      "created_at": {
                        "type": "string",
                        "format": "date"
                      },
                      "updated_at": {
                        "type": "string",
                        "format": "date"
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "User is not a admin"
          }
        }
      }
    },
    "/users/:user_id": {
      "get": {
        "tags": ["Users"],
        "summary": "list a user",
        "description": "Show a user details",
        "parameters": [
          {
            "name": "user_id",
            "in": "path",
            "required": true,
            "type": "string",
            "format": "uuid"
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "name": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    },
                    "admin": {
                      "type": "boolean"
                    },
                    "created_at": {
                      "type": "string",
                      "format": "date"
                    },
                    "updated_at": {
                      "type": "string",
                      "format": "date"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "User is not a admin"
          }
        }
      }
    },
    "/users/:user_id/admin": {
      "patch": {
        "tags": ["Users"],
        "summary": "turns into admin",
        "description": "Turns a user into admin",
        "parameters": [
          {
            "name": "user_id",
            "in": "path",
            "required": true,
            "type": "string",
            "format": "uuid"
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "name": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    },
                    "admin": {
                      "type": "boolean"
                    },
                    "created_at": {
                      "type": "string",
                      "format": "date"
                    },
                    "updated_at": {
                      "type": "string",
                      "format": "date"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "User is not a admin"
          }
        }
      }
    }
  }
}